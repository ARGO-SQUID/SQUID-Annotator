<script id="street-info-template" type="x-tmpl-mustache">
  <p id="street-name-title">Street:</p>
  <p id="street-name">{{street_name}}</p>
  <p class="location-item">Average Ride Quality:<br>{{average_bumpiness}}</p>
</script>

<script id="location-info-template" type="x-tmpl-mustache">
  <p id="location-title">Location:</p>
  <p class="location-item ll">{{lat}},<br>{{long}}</p>
  <p class="location-item">Ride Quality:<br>{{bumpiness}}</p>
  <p class="location-item">Measured On:<br>{{display_reading_timestamp}}</p>
</script>

<script id="street-carousel-template" type="x-tmpl-mustache">
  <div class="street-location-carousel" data-current="{{initialLocationId}}">
    {{#initialLocation}}
      <div class="location-img-container active" data-id="{{id}}">
        <img src="{{image}}" data-id="{{id}}" class="location-img active" id="location-img-{{id}}">
      </div>
    {{/initialLocation}}
    {{#locations}}
      <div class="location-img-container" data-id="{{id}}">
        <img src="{{image}}" data-id="{{id}}" class="location-img" id="location-img-{{id}}">
      </div>
    {{/locations}}
  </div>
</script>
